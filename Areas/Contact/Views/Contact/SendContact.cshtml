@model WebAnToanVeSinhThucPhamDemo.Models.Contact.LienHe

@{
    ViewData["Title"] = "Gửi liên hệ đến VFA Đà Nẵng";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
  
<div class="row">
        <div class="contact-firstcol p-2 h-100">
        <div class="col-md-auto">
                <img src="./assets/img/email.png" alt="Girl in a jacket" width="500" height="600">
            <h1>@ViewData["Title"]</h1>
            <h4>Chúng tôi luôn lắng nghe ý kiến của các bạn!</h4>
        </div>
        </div>
    <div class="col-md-8">
        <form asp-action="SendContact" class="formcontact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HoTen" class="control-label"></label>
                <input asp-for="HoTen" class="form-control" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="NoiDung" class="control-label"></label>
                    <textarea rows="5" asp-for="NoiDung" class="form-control"></textarea>
                    <span asp-validation-for="NoiDung" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Gửi liên hệ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
