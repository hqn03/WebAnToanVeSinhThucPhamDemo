@model WebAnToanVeSinhThucPhamDemo.Models.Blog.DanhMuc

@{
    ViewData["Title"] = Model.TenDanhMuc;
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Nội dung
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.NoiDung)
        </dd>
        <dt class="col-sm-2">
            Url
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Slug)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Chỉnh sửa</a> |
    <a asp-action="Index">Danh sách chuyên mục</a>
</div>