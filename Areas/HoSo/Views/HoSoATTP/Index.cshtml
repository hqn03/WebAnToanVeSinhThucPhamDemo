@model IEnumerable<WebAnToanVeSinhThucPhamDemo.Models.HoSoCapGiayChungNhan>

@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "_Layout";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <div class="mt-5">
                    <h4 class="card-title float-left mt-2">Danh Sách Hồ Sơ</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">

            <aside class="col-md-4">
                <div class="widget search-widget">
                    <h5>Tìm Kiếm Hồ Sơ</h5>
                    <form asp-action="Index" method="get" class="search-form">
                        <div class="input-group mt-3">
                            <input type="text" name="searchString" placeholder="Tìm kiếm..." class="form-control">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </aside>

            <form action="Index" method="get">
                <div class="row formtype">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Lọc Theo Phường Xã</label>
                            <select class="form-control" id="phuongXaId" name="phuongXaId" onchange="this.form.submit()">
                                <option value="">Chọn Phường Xã</option>
                                @foreach (var phuongXa in ViewBag.PhuongXaList)
                                {
                                    <option value="@phuongXa.IDPhuongXa">@phuongXa.TenPhuongXa</option>
                                }
                            </select>
                        </div>
                    </div>

                    <form action="Index" method="get">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Từ</label>
                                <div class="cal-icon">
                                    <input type="text" id="fromDate" name="fromDate" class="form-control datetimepicker">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Đến</label>
                                <div class="cal-icon">
                                    <input type="text" id="toDate" name="toDate" class="form-control datetimepicker">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary" style="margin-top: 32px;">Lọc</button>
                        </div>
                    </form>
                    

                   
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="datatable table table-stripped">
                            <thead>
                                <tr>
                                    <th>Mã Hồ Sơ</th>
                                    <th>Ngày Đăng Ký</th>
                                    <th>Loại Thực Phẩm</th>
                                    <th>Tên Cơ Sở</th>
                                    <th>Họ Tên Chủ Cơ Sở</th>
                                    <th>Phường Xã</th>
                                    <th class="text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.IdgiayChungNhan)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NgayDangKy)</td>
                                        <td>@Html.DisplayFor(modelItem => item.LoaiThucPham)</td>
                                        <td>@Html.DisplayFor(modelItem => item.IdcoSoNavigation.TenCoSo)</td>
                                        <td>@Html.DisplayFor(modelItem => item.IdcoSoNavigation.ChuCoSo.HoTen)</td>
                                        <td>@Html.DisplayFor(modelItem => item.IdcoSoNavigation.PhuongXa.TenPhuongXa)</td>
                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v ellipse_color"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right"> <a class="dropdown-item" href="edit-asset.html"><i class="fas fa-pencil-alt m-r-5"></i> Edit</a> <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_asset"><i class="fas fa-trash-alt m-r-5"></i> Delete</a> </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="delete_asset" class="modal fade delete-modal" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <img src="assets/img/sent.png" alt="" width="50" height="46">
                    <h3 class="delete_class">Are you sure want to delete this Asset?</h3>
                    <div class="m-t-20">
                        <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css" />
    <script>
        $(function () {
            $('.datetimepicker').datetimepicker({
                timepicker: false,
                format: 'd-m-Y' // định dạng ngày YYYY-MM-DD
            });
        });
    </script>
}
