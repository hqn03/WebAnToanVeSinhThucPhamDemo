    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Đăng ký giấy chứng nhận vệ sinh an toàn thực phẩm</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Insert" method="post" enctype="multipart/form-data">
