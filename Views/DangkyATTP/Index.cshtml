                                    <label class="col-lg-4 col-form-label">Địa chỉ<span class=".text-danger"> (*)</span></label>
                                    <div class="col-lg-8">
                                        <input type="text" name="diachi" class="form-control" value="@TempData["diaChi"]">
                                        <div style="margin-top: .25rem;font-size: .875em;color: #dc3545;">@TempData["errorDiaChi"]</div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">Quận/Huyện</label>
                                    <div class="col-lg-8">
                                            <select class="form-select" id="quanhuyen" asp-items="@ViewBag.quanhuyen"></select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">Phường/Xã<span class=".text-danger"> (*)</span></label>
                                    <div class="col-lg-8">
                                        <select id="phuongxa"  asp-items="@ViewBag.phuongxa" name="phuongxa">
                                        </select>
                                        <div style="margin-top: .25rem;font-size: .875em;color: #dc3545;">@TempData["errorPhuongXa"]</div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">Loại hình kinh doanh<span class=".text-danger"> (*)</span></label>
                                    <div class="col-lg-8">
                                        <select class="form-select" name="loaihinhkinhdoanh" >
                                            <option value="0">Select</option>
                                            <option value="1">Cơ sở sản xuất, kinh doanh thực phẩm</option>
                                            <option value="2">Cơ sở kinh doanh dịch vụ ăn uống</option>
                                        </select>
                                        <div style="margin-top: .25rem;font-size: .875em;color: #dc3545;">@TempData["errorLoaiHinhKinhDoanh"]</div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">Số giấy phép kinh doanh<span class=".text-danger"> (*)</span></label>
                                    <div class="col-lg-8">
                                        <input type="text" name="sogiayphep" class="form-control" value="@TempData["soGiayPhep"]">
                                        <div style="margin-top: .25rem;font-size: .875em;color: #dc3545;">@TempData["errorSoGiayPhep"]</div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">Ngày cấp giấy phép<span class=".text-danger"> (*)</span></label>
                                    <div class="col-lg-8">
                                        <input type="date" name="ngaycap" class="form-control" value="@TempData["ngayCap"]" >
                                        <div style="margin-top: .25rem;font-size: .875em;color: #dc3545;">@TempData["errorNgayCap"]</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <h5 class="card-title">Thông tin giấy chứng nhận</h5>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">Loại thực phẩm<span class=".text-danger"> (*)</span></label>
                                    <div class="col-lg-8">
                                        <input type="text" name="loaithucpham" class="form-control" value="@TempData["loaiThucPham"]">
                                        <div style="margin-top: .25rem;font-size: .875em;color: #dc3545;">@TempData["errorLoaiThucPham"]</div>
                                    </div>            
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">Hình ảnh minh chứng<span class=".text-danger"> (*)</span></label>
                                    <div class="col-lg-8">
                                        <input id="files" type="file" name="hinhanh" class="form-control" accept="image/*" multiple>
                                        <div style="margin-top: .25rem;font-size: .875em;color: #dc3545;">@TempData["errorHinhAnh"]</div>
                                        <div id="preview"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                    <div id="myModal" class="modal">
                        <span class="close">&times;</span>
                        <img class="modal-content" id="img01">
                        <!-- <div id="caption"></div> -->
                    </div>
                </div>
            </div>
        </div>
