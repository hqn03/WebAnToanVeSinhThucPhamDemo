@{
	ViewBag.Title = "Index";
}
<div class="content container-fluid">

	<div class="page-header">
		<div class="row">
			<div class="col">
				<h3 class="page-title">Horizontal Form</h3>
				<ul class="breadcrumb">
					<li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
					<li class="breadcrumb-item active">Horizontal Form</li>
				</ul>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<h5 class="card-title">Đăng ký giấy chứng nhận vệ sinh an toàn thực phẩm</h5>
				</div>
				<div class="card-body">
					<form asp-action="Insert" method="post" enctype="multipart/form-data">
						<div class="row">
							<div class="col-xl-6">
								<h5 class="card-title">Thông tin cơ sở</h5>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">Tên cơ sở</label>
									<div class="col-lg-9">
										<input type="text" name="tencoso" class="form-control">
									</div>
								</div>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">Địa chỉ</label>
									<div class="col-lg-9">
										<input type="text" name="diachi" class="form-control">
									</div>
								</div>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">Loại hình kinh doanh</label>
									<div class="col-lg-9">
										<select name="loaihinhkinhdoanh" class="select">
											<option>Select</option>
											<option value="1">Cơ sở sản xuất, kinh doanh thực phẩm</option>
											<option value="2">Cơ sở kinh doanh dịch vụ ăn uống</option>
										</select>
									</div>
								</div>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">Số giấy phép kinh doanh</label>
									<div class="col-lg-9">
										<input type="text" name="sogiayphep" class="form-control">
									</div>
								</div>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">Ngày cấp giấy phép</label>
									<div class="col-lg-9">
										<input type="date" name="ngaycap" class="form-control">
									</div>
								</div>
							</div>
							<div class="col-xl-6">
								<h5 class="card-title">Thông tin giấy chứng nhận</h5>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">Loại thực phẩm</label>
									<div class="col-lg-9">
										<input type="text" name="loaithucpham" class="form-control">
									</div>
								</div>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">Hình ảnh minh chứng</label>
									<div class="col-lg-9">
										<input type="file" name="hinhanh" class="form-control" multiple>
									</div>
								</div>
							</div>
						</div>
						<div class="text-end">
							<button type="submit" class="btn btn-primary">Submit</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
