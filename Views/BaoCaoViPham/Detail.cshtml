@model WebAnToanVeSinhThucPhamDemo.Models.BaoCaoViPham

@{
    ViewData["Title"] = "Chi tiết báo cáo";
}
<hr />

<div class="content container-fluid">
<div class="mb-3">
    <a asp-action="List">Trở về</a>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Chi tiết báo cáo vi phạm</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class = "col-sm-2 mb-3">
                        Ngày báo cáo
                    </dt>
                    <dd class = "col-sm-10">
                        @* @Html.DisplayFor(model => model.NgayBaoCao) *@
                        @Model.NgayBaoCao.Value.ToString("dd/MM/yyyy")
                    </dd>
                    <dt class = "col-sm-2 mb-3">
                        Họ tên người báo cáo
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.HoTen)
                    </dd>
                    <dt class = "col-sm-2 mb-3">
                        Số điện thoại
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Sdt)
                    </dd>
                    <dt class = "col-sm-2 mb-3">
                        CCCD
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Cccd)
                    </dd>
                    <dt class = "col-sm-2 mb-3">
                        Cơ sở
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.IdcoSoNavigation.TenCoSo)
                    </dd>
                    <dt class = "col-sm-2 mb-3">
                        Địa chỉ cơ sở
                    </dt>
                    <dd class = "col-sm-10">
                        @($"{Model.IdcoSoNavigation.DiaChi}, {Model.IdcoSoNavigation.PhuongXa.TenPhuongXa}, {Model.IdcoSoNavigation.PhuongXa.QuanHuyen.TenQuanHuyen}")
                    </dd>
                    <dt class = "col-sm-2 mb-3">
                        Nội dung báo cáo
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.NoiDung)
                    </dd>
                    <dt class = "col-sm-2 mb-3">
                        Hình ảnh
                    </dt>
                    <dd class = "col-sm-10">
                        @foreach (var image in Model.HinhAnhMinhChung.Split(","))
                        {
                            @if (!image.Equals(""))
                            {
                                <img src="@Url.Content("~/BaoCaoViPham/" + Model.IdbaoCao + "/" + image)" alt="Hình ảnh" class="col-sm-10 px-0 pb-3" />
                            }
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>